#!/usr/bin/env bash

set -eu -o pipefail
shopt -s lastpipe nullglob

declare -rx app_name="${0##*/}"
declare -rx app_path=$(realpath "${0}")
declare -rx app_dir=$(dirname "${app_path}")

declare -rx app_base_path=$(realpath "${app_dir}"/..)
declare -rx app_plugins_path="${app_base_path}/plugins"
declare -rx app_database_dump_file_suffix='-dump.sql'
declare -rx app_config_file_pattern='*.jimbo.conf'

source "${app_base_path}/utils.bash"

main() {
    local cmd

    while [ $# -gt 0 ]; do
        case "${1}" in
            -h | --help ) cmd='help' ;;
            -- ) shift && break ;;
            -* ) app_error_unknown_option "${1}" ;;
            * ) break
        esac

        shift
    done

    if [ -z "${cmd:-}" ]; then
        if [ $# -eq 0 ]; then
            app_error_missing_argument 'command. Try --help for more information.'
        fi

        cmd="${1}" && shift
    fi

    local executable="${app_base_path}/commands/${cmd}"

    if ! [[ -f "${executable}" ]]; then
        app_error_unknown_command "${cmd}"
    fi

    exec "${executable}" "$@"
}

main "$@"
