#!/usr/bin/env bash

set -eu -o pipefail
shopt -s lastpipe nullglob

source "${app_libs_loader}"

app::use 'error'
app::use 'site'

main() {
    while [[ $# -gt 0 ]]; do
        case "${1}" in
            -- ) shift && break ;;
            -* ) app::error::unknown_option "${1}" ;;
            * ) break
        esac

        shift
    done

    if [[ $# -gt 1 ]]; then
        app::error::too_many_arguments 1
    fi

    if [[ $# -lt 1 ]]; then
        app::error::missing_argument 'path to site'
    fi

    local site_path="$(realpath "${1}")"

    app::site::check_site_path_exists_and_readable "${site_path}"

    local -A site_config=()

    app::site::detect_site_config "${site_path}"

    app_header 'Plugin'

    echo "Name: ${site_config[plugin_name]:-default (zip)}"
    echo "Path: ${site_config[plugin]:-~}"

    app_header 'Site'

    local config_file="${site_config[config_file]:-~}"

    echo "Path:        ${site_config[root]:-~}"
    echo "Config file: ${config_file##*/}"
    echo "Exclude:     ${site_config[exclude]:-~}"
    echo "Include:     ${site_config[include]:-~}"

    app_header 'Database'

    echo "Name:     ${site_config[database_name]:-~}"
    echo "User:     ${site_config[database_user]:-~}"
    echo "Password: ${site_config[database_password]:-~}"
}

app_header() {
    printf "\n### %s\n\n" "${1}"
}

main "$@"
